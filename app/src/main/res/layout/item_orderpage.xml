<?xml version="1.0" encoding="utf-8"?><LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"    android:layout_width="match_parent"    android:layout_height="wrap_content"    android:orientation="vertical">    <RelativeLayout        android:layout_width="match_parent"        android:layout_height="30dp">        <shlm.canshu.com.canshu.Local_Views.PriceNumberView            android:layout_width="wrap_content"            android:layout_height="wrap_content"            android:layout_alignParentLeft="true"            android:layout_centerVertical="true"            android:paddingLeft="5dp"            android:text="8988884763773"            android:textColor="#000000"            android:textSize="10sp" />        <TextView            android:layout_width="wrap_content"            android:layout_height="wrap_content"            android:layout_alignParentRight="true"            android:layout_centerVertical="true"            android:paddingRight="5dp"            android:text="支付成功"            android:textColor="#f30d88"            android:textSize="10sp" />    </RelativeLayout>    <LinearLayout        android:layout_width="match_parent"        android:layout_height="wrap_content"        android:layout_marginTop="5dp"        android:orientation="horizontal">        <LinearLayout            android:layout_width="80dp"            android:layout_height="80dp"            android:layout_marginLeft="10dp">            <ImageView                android:layout_width="match_parent"                android:layout_height="match_parent"                android:src="@drawable/aiqiyi" />        </LinearLayout>        <LinearLayout            android:layout_width="match_parent"            android:layout_height="match_parent"            android:orientation="vertical">            <TextView                android:layout_width="wrap_content"                android:layout_height="wrap_content"                android:layout_marginTop="5dp"                android:maxLines="2"                android:paddingLeft="15dp"                android:text="爱奇艺日制会员共享使用(使用期限一天)"                android:textColor="#000000"                android:textSize="13sp" />            <TextView                android:layout_width="wrap_content"                android:layout_height="wrap_content"                android:layout_marginTop="5dp"                android:maxLines="2"                android:paddingLeft="15dp"                android:text="使用日期:2018/09/01:14/36 到 2018/09/07:14/36"                android:textColor="#000000"                android:textSize="10sp" />        </LinearLayout>    </LinearLayout>    <RelativeLayout        android:layout_width="match_parent"        android:layout_height="wrap_content"        android:layout_marginTop="10dp">        <TextView            android:id="@+id/item_orderpage_loginTitle"            android:layout_width="50dp"            android:layout_height="wrap_content"            android:layout_centerVertical="true"            android:layout_marginLeft="10dp"            android:layout_marginTop="5dp"            android:text="登录信息"            android:textColor="#000000"            android:textSize="12sp" />        <View            android:layout_width="match_parent"            android:layout_height="1dp"            android:layout_centerVertical="true"            android:layout_marginLeft="10dp"            android:layout_toRightOf="@id/item_orderpage_loginTitle"            android:background="#efefef" />    </RelativeLayout>    <TextView        android:layout_width="wrap_content"        android:layout_height="wrap_content"        android:layout_gravity="right"        android:layout_marginTop="5dp"        android:layout_marginRight="15dp"        android:text="登录账户(应用中点击手机号码登录的账户)"        android:textColor="#000000"        android:textSize="12sp" />    <RelativeLayout        android:layout_width="match_parent"        android:layout_height="20dp"        android:layout_marginTop="5dp"        android:gravity="right">        <shlm.canshu.com.canshu.Local_Views.PriceNumberView            android:id="@+id/item_orderpage_loginPhone"            android:layout_width="wrap_content"            android:layout_height="wrap_content"            android:layout_centerVertical="true"            android:layout_marginLeft="10dp"            android:text="15206036936"            android:textColor="#f30d65"            android:textSize="15sp" />        <TextView            android:layout_width="wrap_content"            android:layout_height="wrap_content"            android:layout_centerVertical="true"            android:layout_marginLeft="10dp"            android:layout_marginRight="10dp"            android:layout_toRightOf="@id/item_orderpage_loginPhone"            android:padding="2dp"            android:text="复制手机号"            android:textColor="#000000"            android:textSize="8sp" />    </RelativeLayout>    <RelativeLayout        android:layout_width="match_parent"        android:layout_height="wrap_content"        android:layout_marginTop="25dp"        android:layout_marginBottom="20dp">        <TextView            android:layout_width="wrap_content"            android:layout_height="wrap_content"            android:layout_alignParentLeft="true"            android:layout_centerVertical="true"            android:layout_marginLeft="10dp"            android:paddingLeft="10dp"            android:paddingTop="5dp"            android:paddingRight="10dp"            android:paddingBottom="5dp"            android:text="合计支付人民币3.6元,可使用7天"            android:textColor="#000000"            android:textSize="10sp" />        <TextView            android:id="@+id/item_orderpage_Btncheck"            android:layout_width="wrap_content"            android:layout_height="wrap_content"            android:layout_alignParentRight="true"            android:layout_centerVertical="true"            android:layout_marginLeft="10dp"            android:layout_marginRight="10dp"            android:paddingLeft="10dp"            android:paddingTop="5dp"            android:paddingRight="10dp"            android:paddingBottom="5dp"            android:text="开始验证登录"            android:textColor="#ffffff"            android:textSize="13sp" />    </RelativeLayout></LinearLayout>