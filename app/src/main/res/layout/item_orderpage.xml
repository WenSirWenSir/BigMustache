<?xml version="1.0" encoding="utf-8"?><LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"    android:layout_width="match_parent"    android:layout_height="match_parent"    android:orientation="vertical">    <RelativeLayout        android:layout_width="match_parent"        android:layout_height="30dp">        <TextView            android:layout_width="wrap_content"            android:layout_height="wrap_content"            android:layout_alignParentLeft="true"            android:layout_centerVertical="true"            android:paddingLeft="5dp"            android:text="订单号码:8988884763773"            android:textColor="#000000"            android:textSize="10sp" />        <TextView            android:layout_width="wrap_content"            android:layout_height="wrap_content"            android:layout_alignParentRight="true"            android:layout_centerVertical="true"            android:paddingRight="5dp"            android:text="支付成功"            android:textColor="#f30d88"            android:textSize="10sp" />    </RelativeLayout>    <!--分割线条-->    <View        android:layout_width="match_parent"        android:layout_height="1dp"        android:background="#efefef" />    <LinearLayout        android:layout_width="match_parent"        android:layout_height="wrap_content"        android:orientation="vertical">        <TextView            android:layout_width="wrap_content"            android:layout_height="wrap_content"            android:layout_marginTop="5dp"            android:paddingLeft="5dp"            android:text="爱奇艺日制会员共享使用(使用期限一天)"            android:textColor="#000000"            android:textSize="13sp" />        <RelativeLayout            android:layout_width="match_parent"            android:layout_height="30dp"            android:layout_marginLeft="20dp">            <TextView                android:layout_width="wrap_content"                android:layout_height="wrap_content"                android:layout_centerVertical="true"                android:layout_marginTop="5dp"                android:paddingLeft="5dp"                android:text="登录手机号"                android:textColor="#666666"                android:textSize="11sp" />            <shlm.canshu.com.canshu.Local_Views.PriceNumberView                android:id="@+id/item_orderpage_loginphone"                android:layout_width="wrap_content"                android:layout_height="wrap_content"                android:layout_centerVertical="true"                android:layout_marginLeft="80dp"                android:layout_marginTop="2dp"                android:paddingLeft="5dp"                android:text="15206036936"                android:textColor="#000000"                android:textSize="11sp" />            <TextView                android:layout_width="wrap_content"                android:layout_height="wrap_content"                android:layout_centerVertical="true"                android:layout_marginLeft="10dp"                android:layout_marginTop="5dp"                android:layout_toRightOf="@id/item_orderpage_loginphone"                android:paddingLeft="5dp"                android:paddingTop="2dp"                android:paddingRight="5dp"                android:paddingBottom="2dp"                android:text="复制"                android:textColor="#666666"                android:textSize="10sp" />        </RelativeLayout>        <LinearLayout            android:layout_width="match_parent"            android:layout_height="wrap_content"            android:layout_marginLeft="20dp"            android:orientation="vertical">            <TextView                android:layout_width="wrap_content"                android:layout_height="wrap_content"                android:layout_centerVertical="true"                android:layout_marginTop="5dp"                android:paddingLeft="5dp"                android:text="验证方式"                android:textColor="#666666"                android:textSize="11sp" />            <RelativeLayout                android:layout_width="match_parent"                android:layout_height="30dp"                android:layout_marginRight="10dp">                <ImageView                    android:id="@+id/act_order_checkimg"                    android:layout_width="15dp"                    android:layout_height="15dp"                    android:layout_centerVertical="true"                    android:layout_marginLeft="15dp" />                <LinearLayout                    android:layout_width="wrap_content"                    android:layout_height="wrap_content"                    android:layout_centerVertical="true"                    android:layout_marginLeft="35dp">                    <TextView                        android:id="@+id/act_order_checktype"                        android:layout_width="match_parent"                        android:layout_height="wrap_content"                        android:text="本人手机号获取验证码登录"                        android:textColor="#000000"                        android:textSize="10sp" />                </LinearLayout>            </RelativeLayout>        </LinearLayout>        <LinearLayout            android:layout_width="match_parent"            android:layout_height="wrap_content"            android:layout_marginLeft="20dp"            android:orientation="vertical">            <TextView                android:layout_width="wrap_content"                android:layout_height="wrap_content"                android:layout_centerVertical="true"                android:layout_marginTop="5dp"                android:paddingLeft="5dp"                android:text="登录设备"                android:textColor="#666666"                android:textSize="11sp" />            <RelativeLayout                android:layout_width="match_parent"                android:layout_height="30dp"                android:layout_marginRight="10dp">                <ImageView                    android:layout_width="15dp"                    android:layout_height="15dp"                    android:layout_centerVertical="true"                    android:layout_marginLeft="15dp" />                <LinearLayout                    android:layout_width="wrap_content"                    android:layout_height="wrap_content"                    android:layout_centerVertical="true"                    android:layout_marginLeft="35dp">                    <TextView                        android:layout_width="match_parent"                        android:layout_height="wrap_content"                        android:text="苹果平板/安卓平板登录"                        android:textColor="#000000"                        android:textSize="10sp" />                </LinearLayout>            </RelativeLayout>        </LinearLayout>    </LinearLayout>    <LinearLayout        android:layout_width="match_parent"        android:layout_height="wrap_content"        android:layout_marginLeft="5dp"        android:layout_marginTop="10dp">        <TextView            android:layout_width="wrap_content"            android:layout_height="wrap_content"            android:text="共计购买3天,合计支付:1.5元"            android:textColor="#f30d88"            android:textSize="13sp" />    </LinearLayout>    <RelativeLayout        android:layout_width="match_parent"        android:layout_height="wrap_content"        android:layout_marginLeft="5dp"        android:paddingBottom="10dp"        android:layout_marginTop="10dp">        <TextView            android:id="@+id/item_orderpage_btncheck"            android:layout_width="100dp"            android:layout_height="25dp"            android:layout_alignParentRight="true"            android:layout_marginRight="10dp"            android:gravity="center"            android:text="开始登录验证"            android:textColor="#ffffff"            android:textSize="13sp" />    </RelativeLayout></LinearLayout>