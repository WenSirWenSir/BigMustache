<?xml version="1.0" encoding="utf-8"?><LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"    android:layout_width="match_parent"    android:layout_height="wrap_content"    android:orientation="vertical">    <TextView        android:layout_width="match_parent"        android:layout_height="wrap_content"        android:layout_marginTop="15dp"        android:gravity="center"        android:text="验证提示"        android:textColor="#000000"        android:textSize="13sp" />    <View        android:layout_width="match_parent"        android:layout_height="1dp"        android:layout_marginLeft="20dp"        android:layout_marginTop="5dp"        android:layout_marginRight="20dp"        android:background="#000000" />    <TextView        android:layout_width="match_parent"        android:layout_height="wrap_content"        android:layout_marginTop="15dp"        android:gravity="center"        android:paddingLeft="15dp"        android:paddingRight="15dp"        android:text="验证机会只有一次,请你仔细阅读登录相关操作.误操作我们不退款的哦。"        android:textColor="#000000"        android:textSize="13sp" />    <LinearLayout        android:layout_width="match_parent"        android:layout_height="match_parent"        android:layout_marginTop="20dp"        android:orientation="horizontal">        <RelativeLayout            android:id="@+id/dialog_canfirm"            android:layout_width="0dp"            android:layout_height="40dp"            android:layout_weight="1"            android:background="#a9a9a9">            <TextView                android:layout_width="match_parent"                android:layout_height="wrap_content"                android:layout_centerVertical="true"                android:gravity="center"                android:text="好的"                android:textColor="#ffffff"                android:textSize="13sp" />        </RelativeLayout>        <RelativeLayout            android:id="@+id/dialog_dissmion"            android:layout_width="0dp"            android:layout_height="40dp"            android:layout_weight="1"            android:background="#f30d65">            <TextView                android:layout_width="match_parent"                android:layout_height="wrap_content"                android:layout_centerVertical="true"                android:gravity="center"                android:text="取消"                android:textColor="#ffffff"                android:textSize="13sp" />        </RelativeLayout>    </LinearLayout></LinearLayout>