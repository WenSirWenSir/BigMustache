<?xml version="1.0" encoding="utf-8"?><LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"    android:layout_width="match_parent"    android:layout_height="match_parent"    android:orientation="vertical">    <TextView        android:layout_width="match_parent"        android:layout_height="wrap_content"        android:layout_marginLeft="15dp"        android:layout_marginTop="20dp"        android:text="选择您登录方式"        android:textColor="#666666"        android:textSize="19sp" />    <LinearLayout        android:id="@+id/act_payitem_b_paytypebody"        android:layout_width="match_parent"        android:layout_height="match_parent"        android:layout_marginTop="20dp"        android:orientation="vertical">        <RelativeLayout            android:layout_width="match_parent"            android:layout_height="80dp"            android:layout_marginLeft="15dp"            android:layout_marginRight="10dp">            <ImageView                android:layout_width="30dp"                android:layout_height="30dp"                android:layout_centerVertical="true"                android:layout_marginLeft="15dp"                android:src="@drawable/ico_checkphone" />            <LinearLayout                android:layout_width="wrap_content"                android:layout_height="wrap_content"                android:layout_centerVertical="true"                android:layout_marginLeft="55dp">                <TextView                    android:layout_width="match_parent"                    android:layout_height="wrap_content"                    android:text="本APP内获取登录验证码"                    android:textColor="#000000"                    android:textSize="15sp" />            </LinearLayout>        </RelativeLayout>        <!--备注-->        <TextView            android:layout_width="match_parent"            android:layout_height="wrap_content"            android:layout_marginLeft="15dp"            android:layout_marginTop="5dp"            android:paddingRight="10dp"            android:text="输入手机号码,点击发送验证码之后.重新回到本APP获取登录验证码"            android:textSize="12dp" />        <RelativeLayout            android:layout_width="match_parent"            android:layout_height="80dp"            android:layout_marginLeft="15dp"            android:layout_marginTop="10dp"            android:layout_marginRight="10dp">            <ImageView                android:layout_width="30dp"                android:layout_height="30dp"                android:layout_centerVertical="true"                android:layout_marginLeft="15dp"                android:src="@drawable/ico_message" />            <LinearLayout                android:layout_width="wrap_content"                android:layout_height="wrap_content"                android:layout_centerVertical="true"                android:layout_marginLeft="55dp">                <TextView                    android:layout_width="match_parent"                    android:layout_height="wrap_content"                    android:text="本人手机号获取验证码登录"                    android:textColor="#000000"                    android:textSize="15sp" />            </LinearLayout>        </RelativeLayout>        <TextView            android:layout_width="match_parent"            android:layout_height="wrap_content"            android:layout_marginLeft="15dp"            android:layout_marginTop="5dp"            android:paddingRight="10dp"            android:text="输入手机号码,点击发送验证码之后.在你设置的手机号中获取短信验证码"            android:textSize="12dp" />    </LinearLayout></LinearLayout>