<?xml version="1.0" encoding="utf-8"?><LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"    android:layout_width="match_parent"    android:layout_height="match_parent"    android:background="#ffffff"    android:orientation="vertical">    <TextView        android:layout_width="match_parent"        android:layout_height="wrap_content"        android:layout_marginLeft="15dp"        android:layout_marginTop="20dp"        android:text="选择您想要的登录方式"        android:textColor="#666666"        android:textSize="19sp" />    <View        android:layout_width="match_parent"        android:layout_height="1dp"        android:layout_marginLeft="15dp"        android:layout_marginTop="5dp"        android:background="#e9e9e9" />    <LinearLayout        android:id="@+id/act_payitem_a_paytypebody"        android:layout_width="match_parent"        android:layout_height="match_parent"        android:layout_marginTop="20dp"        android:orientation="vertical">        <RelativeLayout            android:layout_width="match_parent"            android:layout_height="80dp"            android:layout_marginLeft="15dp"            android:layout_marginRight="10dp">            <ImageView                android:layout_width="30dp"                android:layout_height="30dp"                android:layout_centerVertical="true"                android:layout_marginLeft="15dp"                android:src="@drawable/ico_pay_typea" />            <LinearLayout                android:layout_width="wrap_content"                android:layout_height="wrap_content"                android:layout_centerVertical="true"                android:layout_marginLeft="55dp">                <TextView                    android:layout_width="match_parent"                    android:layout_height="wrap_content"                    android:text="安卓平板/苹果平板登录"                    android:textColor="#000000"                    android:textSize="15sp" />            </LinearLayout>        </RelativeLayout>        <RelativeLayout            android:layout_width="match_parent"            android:layout_height="80dp"            android:layout_marginLeft="15dp"            android:layout_marginTop="10dp"            android:layout_marginRight="10dp">            <ImageView                android:layout_width="30dp"                android:layout_height="30dp"                android:layout_centerVertical="true"                android:layout_marginLeft="15dp"                android:src="@drawable/ico_pay_typeb" />            <LinearLayout                android:layout_width="wrap_content"                android:layout_height="wrap_content"                android:layout_centerVertical="true"                android:layout_marginLeft="55dp">                <TextView                    android:layout_width="match_parent"                    android:layout_height="wrap_content"                    android:text="台式电脑/笔记本电脑登录"                    android:textColor="#000000"                    android:textSize="15sp" />            </LinearLayout>        </RelativeLayout>        <RelativeLayout            android:layout_width="match_parent"            android:layout_height="80dp"            android:layout_marginLeft="15dp"            android:layout_marginTop="10dp"            android:layout_marginRight="10dp">            <ImageView                android:layout_width="30dp"                android:layout_height="30dp"                android:layout_centerVertical="true"                android:layout_marginLeft="15dp"                android:src="@drawable/ico_pay_typec" />            <LinearLayout                android:layout_width="wrap_content"                android:layout_height="wrap_content"                android:layout_centerVertical="true"                android:layout_marginLeft="55dp">                <TextView                    android:layout_width="match_parent"                    android:layout_height="wrap_content"                    android:text="安卓手机/苹果手机登录"                    android:textColor="#000000"                    android:textSize="15sp" />            </LinearLayout>        </RelativeLayout>    </LinearLayout></LinearLayout>