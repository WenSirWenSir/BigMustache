<?xml version="1.0" encoding="utf-8"?><RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"    android:layout_width="match_parent"    android:layout_height="match_parent">    <ImageView        android:id="@+id/login_ico"        android:layout_width="150dp"        android:layout_height="150dp"        android:layout_centerHorizontal="true"        android:layout_marginTop="40dp"        android:src="@drawable/ico" />    <!--登录界面-->    <LinearLayout        android:layout_width="match_parent"        android:layout_height="match_parent"        android:layout_below="@id/login_ico"        android:background="#ffffff"        android:orientation="vertical">        <LinearLayout            android:layout_width="match_parent"            android:layout_height="wrap_content"            android:layout_marginLeft="40dp"            android:layout_marginRight="40dp"            android:background="#ffffff"            android:orientation="vertical">            <EditText                android:id="@+id/login_input_account"                android:layout_width="match_parent"                android:layout_height="wrap_content"                android:inputType="number"                android:maxLength="7"                android:maxLines="1"                android:paddingLeft="15dp"                android:paddingTop="10dp"                android:paddingBottom="10dp"                android:text="登录账户"                android:textSize="15dp" />            <EditText                android:id="@+id/login_input_password"                android:layout_width="match_parent"                android:layout_height="wrap_content"                android:layout_marginTop="15dp"                android:inputType="text"                android:maxLines="1"                android:paddingLeft="15dp"                android:paddingTop="10dp"                android:paddingBottom="10dp"                android:text="密码"                android:textSize="15dp" />        </LinearLayout>        <RelativeLayout            android:layout_width="match_parent"            android:layout_height="wrap_content"            android:layout_marginTop="20dp">            <TextView                android:id="@+id/login_btngo"                android:layout_width="wrap_content"                android:layout_height="wrap_content"                android:layout_centerHorizontal="true"                android:layout_centerVertical="true"                android:gravity="center"                android:paddingLeft="35dp"                android:paddingTop="10dp"                android:paddingRight="35dp"                android:paddingBottom="10dp"                android:text="登录/注册"                android:textColor="#000000"                android:textSize="12sp" />        </RelativeLayout>    </LinearLayout></RelativeLayout>